<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/color"
    tools:context="projects.oss2015.cs.fundookid.Coat">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton14"
        android:src="@drawable/bluecoat"
        android:onClick="onClickBlueCoat"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView12"
        android:layout_toRightOf="@+id/imageButton19"
        android:layout_toEndOf="@+id/imageButton19" />

     <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton15"
         android:src="@drawable/redcoat"
         android:onClick="onClickRedCoat"
         android:layout_alignTop="@+id/imageButton14"
         android:layout_alignRight="@+id/textView12"
         android:layout_alignEnd="@+id/textView12" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton16"
        android:src="@drawable/yellowcoat"
        android:onClick="onClickYellowCoat"
        android:layout_below="@+id/imageButton15"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Will you wear yellow coat??"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textSize="39sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton19"
        android:src="@drawable/arrow2right"
        android:layout_below="@+id/imageButton16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickRightArrow"
        android:background="#af7b6029"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
