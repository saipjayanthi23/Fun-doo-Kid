<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bunny">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Animal Sounds    "
        android:id="@+id/button1"
        android:background="@drawable/buttons1"
        android:textStyle="italic"
        android:textSize="30sp"
        android:layout_marginRight="66dp"
        android:layout_marginEnd="66dp"
        android:typeface="serif"
        android:textColor="@color/abc_primary_text_material_light"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickSounds"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colors"
        android:id="@+id/button2"
        android:background="@drawable/buttons2"
        android:textStyle="italic"
        android:textSize="30sp"
        android:typeface="serif"
        android:textColor="@color/abc_primary_text_material_light"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginTop="85dp"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:onClick="onClickColors"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shapes"
        android:id="@+id/button3"
        android:background="@drawable/buttons3"
        android:textStyle="italic"
        android:textSize="30sp"
        android:typeface="serif"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="81dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:textColor="@color/abc_primary_text_material_light"
        android:onClick= "onClickShapes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fundoo Tots"
        android:id="@+id/textView2"
        android:layout_marginTop="144dp"
        android:textStyle="bold|italic"
        android:textSize="60sp"
        android:textColorHighlight="#ffffc916"
        android:textColor="#ff1920ff"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:textColorHint="#ffffe118"
        android:textColorLink="#fffbff19"
        android:textIsSelectable="false"
        android:theme="@android:style/Animation.Activity" />


</RelativeLayout>
