<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/shapes"
    tools:context="projects.oss2015.cs.fundookid.Demo">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/replay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/replay"
        android:onClick="onClickReplay"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/next"
        android:layout_alignBottom="@+id/replay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/next"
        android:onClick="onClickNext"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/replay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:id="@+id/linearLayout">

         <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/triangle"
                android:src="@drawable/triangle"
             android:layout_margin="0dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/rectangle"

            android:src="@drawable/rectangle"
            android:layout_margin="0dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/star"

            android:src="@drawable/start"
            android:layout_margin="0dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:id="@+id/circle"

            android:src="@drawable/circle"
            android:layout_margin="0dp" />

        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout2"
        android:layout_margin="0dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/dottedstar"
            android:layout_gravity="right"
            android:src="@drawable/dottedstar"
            android:layout_margin="0dp" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/dottedcircle"
            android:layout_gravity="right"
            android:src="@drawable/dottedcirc"
            android:layout_margin="0dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/dottedtriangle"
            android:layout_gravity="right"
            android:src="@drawable/dottedtriangle"
            android:layout_margin="0dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/dottedrectangle"
            android:layout_gravity="right"
            android:src="@drawable/dottedrectangle"
            android:layout_margin="0dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drag &amp; Match"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#ffbc1aff" />

</RelativeLayout>